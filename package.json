{
  "name": "@lucafabbian/runcss",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "version": "0.1.0",
  "description": "A utility-first CSS runtime for rapid UI development.",
  "main": "dist/runcss.min.mjs",
  "module": "dist/runcss.min.mjs",
  "scripts": {
    "dev": "concurrently 'five-server --open=examples' 'npm run dev:css' 'npm run dev:js' 'npm run dev:module'",
    "build": "npm run build:css && npm run build:js && npm run build:module",

    "build:css": "esbuild ./src/index.css --bundle --outfile=dist/runcss.css",
    "build:js": "esbuild ./src/iife.js --bundle --outfile=dist/runcss.js",
    "build:module": "esbuild ./src/index.js --format=esm --bundle --outfile=dist/runcss.mjs",

    "minify:css": "esbuild ./src/index.css --bundle --outfile=dist/runcss.min.css --minify",
    "minify:js": "esbuild ./src/iife.js --bundle --outfile=dist/runcss.min.js --minify",
    "minify:module": "esbuild ./src/index.js --format=esm --bundle --outfile=dist/runcss.min.mjs --minify",

    "dev:css": "esbuild ./src/index.css --bundle --outfile=dist/runcss.css --watch",
    "dev:js": "esbuild ./src/iife.js --bundle --outfile=dist/runcss.js --watch",
    "dev:module": "esbuild ./src/index.js --format=esm --bundle --outfile=dist/runcss.mjs --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mudgen/runcss.git"
  },
  "keywords": [
    "css",
    "javascript",
    "ui"
  ],
  "author": "Luca Fabbian, Nick Mudge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucafabbian/runcss/issues"
  },
  "homepage": "https://github.com/lucafabbian/runcss#readme",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.4",
    "five-server": "^0.3.1"
  }
}
